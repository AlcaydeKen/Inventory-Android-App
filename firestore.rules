rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Items: anyone (including unauthenticated) can read/create/update/delete
    match /items/{itemId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true;
    }

    // Purchases: allow anyone to create and read purchases (no auth required)
    match /purchases/{pid} {
      allow create: if true;
      allow read: if true;
    }

    // Logs: allow anyone to create and read logs (no auth required)
    match /logs/{logId} {
      allow create: if true;
      allow read: if true;
    }

    // Deny anything else by default
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
